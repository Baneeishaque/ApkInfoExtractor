<GridPane alignment="TOP_CENTER" hgap="10.0" vgap="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="com.vincestyling.apkinfoextractor.wizard.WizardController">
  <ImageView GridPane.columnIndex="1" GridPane.rowIndex="1">
    <image>
      <Image url="@../app_logo.png" preserveRatio="true" requestedWidth="700.0" smooth="true" />
    </image>
  </ImageView>
    <Label text="Solution Name" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <TextField fx:id="txfName" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label text="APKs Directory" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <HBox GridPane.columnIndex="1" GridPane.rowIndex="5">
        <TextField fx:id="txfPath" minWidth="500" GridPane.columnIndex="1" GridPane.rowIndex="5" editable="false" />
        <Button fx:id="btnChoose" text="Choose..." onAction="#showFileChooseer"/>
    </HBox>
    <Label text="Extract Fields" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    <HBox GridPane.columnIndex="1" GridPane.rowIndex="7">
        <CheckBox text="icon" onAction="#iconFieldChange" />
        <CheckBox text="label" onAction="#labelFieldChange" />
        <CheckBox text="package" onAction="#pkgFieldChange" />
        <CheckBox text="versionCode" onAction="#versionCodeFieldChange" />
        <CheckBox text="versionName" onAction="#versionNameFieldChange" />
        <CheckBox text="launchActivity" onAction="#launchActivityFieldChange" />
    </HBox>
    <TableView fx:id="resultTable" GridPane.columnIndex="1" GridPane.rowIndex="8" prefHeight="250" prefWidth="1000"/>
    <Button GridPane.columnIndex="1" GridPane.rowIndex="9" text="Create" onAction="#createSolution" />
  <stylesheets>
    <URL value="@../global.css" />
    <URL value="@wizard.css" />
  </stylesheets>
</GridPane>
